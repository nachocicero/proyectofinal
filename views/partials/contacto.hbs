<div class="form" >



<form action="./contacto" method="post">
<!--  <div class="card border-primary rounded-0"> -->
 
  <div >
    <br>
    <div >
      <h3 class="cc">
        Contactactanos para activar una membresia free !!!
      </h3>
    <br>
    </div>
  </div>

  <div class="card-body p-3">
    <!-- Body -->

    <div class="form-group">
      <div class="input-group mb-2">
   

        <input
          type="text"
          class="form-control"
          id="nombre"
          name="nombre"
          placeholder="Nombre y Apellido"
          required="required"
        ></input>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group mb-2">
       

        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="ejemplo@demail.com"
          required="required"
        ></input>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group mb-2">
        

        <input
          type="number"
          class="form-control"
          id="telefono"
          name="telefono"
          placeholder="tu telefono 11 54621____"
          required="required"
        ></input>
      </div>
    </div>

    <div class="form-group">
      <div class="input-group mb-2">
        <input
          type="textarea"
          id="cuerpo"
          name="cuerpo"
          style="box-sizing: border-box; width: 100%; height: 230px;
           border: 2px solid #ccc; border-radius: 4px;
            font-size: 16px; line-height: 18px; padding: 10px;"
          class="form-control"
          placeholder="Envianos tu Mensaje"
          required="required"
        ></input>
      </div>
    </div>

    <div class="text-center">
      <input
        type="submit"
        value="ENVIAR"
        class="button btn btn-success w-50 p-2"
      ></input>
    </div>

 </div>

 <div class="text-center">
        <h2 class="text-danger">
            {{ validacion }}
        </h2>
    </div>
 </form>
</div>