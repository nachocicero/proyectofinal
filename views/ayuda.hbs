<div class="containter">
    <div class="text-center m-5">
        <h1>
            {{ title }}
        </h1>

    </div>

<form action="./formulario" method="post">
      <div class="mb-3 row">
        <label for="nombre" class="col-sm-2 col-form-label">Nombre:</label>
         <div class="col-sm-10">
        <input type="text" class="form-control" name="nombre" id="nombre" placeholder="nombre del producto">
         </div>
  </div>
  <div class="mb-3 row">
    <label for="precio" class="col-sm-2 col-form-label">Precio</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" name="precio" id="precio" placeholder="precio del producto">
    </div>
  </div>
    <div class="mb-3 text-center">
        <input type="submit" class="button btn btn-success w-50 p-2" 
        value="Enviar Datos">
    </div>

    <div class="text-center">
        <h2 class="text-danger">
            {{ validacion }}
        </h2>
    </div>
</form>

</div>

